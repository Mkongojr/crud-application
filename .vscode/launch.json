{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug crud.cpp",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/crud.exe", // Adjusted for Windows
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true, // Set to true if you want an external terminal
      "MIMode": "gdb", // Use 'gdb' for Windows with MinGW
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build" // Ensure you have a build task defined
    }
  ]
}
